@model IEnumerable<ProductApprovingVM>

@{
    ViewData["Title"] = "Approve Products";
}

<h2>Approve Products</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Approved</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@(product.IsApproved.GetValueOrDefault() ? "Yes" : "No")</td>
                <td>
                    @if (!product.IsApproved.GetValueOrDefault())
                    {
                        <form asp-action="Approve" asp-route-id="@product.Id" method="post">
                            <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to approve this product?');">
                                Approve
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
