                <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

<style>
    :root {
        --wood-dark: #5E3023;
        --wood-medium: #895737;
        --wood-light: #B88B4A;
        --cream: #E3DCCB;
        --beige: #D8C4A7;
        --light-bg: #F5F1EB;
    }

    .btn-danger {
        background-color: #c0392b;
        border-color: #922b21;
    }

    .btn-secondary {
        background-color: var(--beige);
        border-color: var(--wood-light);
        color: #000;
