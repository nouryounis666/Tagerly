@model Tagerly.ViewModels.AdminViewModel.ProductApprovingVM

@{
    ViewData["Title"] = "Confirm Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --wood-dark: #5E3023;
        --wood-medium: #895737;
        --wood-light: #B88B4A;
        --cream: #E3DCCB;
        --beige: #D8C4A7;
        --light-bg: #F5F1EB;
    }

    body {
        background-color: var(--light-bg);
    }

    .card {
        background-color: var(--cream);
        border: 1px solid var(--wood-medium);
        padding: 20px;
        border-radius: 10px;
        max-width: 600px;
        margin: auto;
        margin-top: 40px;
    }

        .card h3 {
            color: var(--wood-dark);
        }

    .btn-delete {
        background-color: red;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .product-img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin-bottom: 15px;
    }
</style>

<div class="card">
    <h3>Are you sure you want to delete this product?</h3>

    <img src="@Model.ImageUrl" alt="Product Image" class="product-img" />

    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Seller:</strong> @Model.SellerName</p>
    <p><strong>Status:</strong> @Model.Status</p>

    <form asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
        <button type="submit" class="btn-delete">Confirm Delete</button>
    </form>
</div>

