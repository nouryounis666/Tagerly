            @model ProductApprovingVM
@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="text-danger">Delete Product</h2>

<div class="card p-4 mb-4" style="background-color: var(--light-bg); border: 1px solid var(--beige);">
    <div class="row mt-3">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded" />
        </div>
        <div class="col-md-8">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Seller:</strong> @Model.SellerName</p>
