@model ProductApprovingVM
@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-danger mb-4">Delete Product</h2>

<div class="card p-4 mb-4" style="background-color: var(--light-bg); border: 1px solid var(--beige); max-width: 900px; margin: auto;">
    <div class="row">
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded border" style="max-height: 300px; object-fit: contain; border-color: var(--beige);" />
        </div>
        <div class="col-md-6">
            <div class="mb-2"><strong>Name:</strong> @Model.Name</div>
            <div class="mb-2"><strong>Description:</strong> @Model.Description</div>
            <div class="mb-2"><strong>Seller:</strong> @Model.SellerName</div>
            <div class="mb-4"><strong>Status:</strong> <span class="text-success">@Model.Status</span></div>

            <form asp-action="ConfirmDelete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                @Html.AntiForgeryToken()

                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-danger px-4">Confirm Delete</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .btn-danger {
        background-color: #c0392b;
        border-color: #922b21;
        color: white;
    }

        .btn-danger:hover {
            background-color: #a93226;
            border-color: #7b241c;
        }

    .btn-secondary {
        background-color: var(--beige);
        border-color: var(--wood-light);
        color: #000;
    }

        .btn-secondary:hover {
            background-color: var(--wood-light);
            border-color: var(--wood-dark);
            color: #fff;
        }
</style>
