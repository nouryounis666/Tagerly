@model List<AdminOrderViewModel>

@{
    ViewBag.Title = "Pending Orders";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    :root {
        --wood-dark: #5E3023;
        --wood-medium: #895737;
        --wood-light: #B88B4A;
        --cream: #E3DCCB;
        --beige: #D8C4A7;
        --light-bg: #F5F1EB;
    }

    body {
        background-color: var(--light-bg);
        font-family: 'Cairo', sans-serif;
    }

    h2 {
        color: var(--wood-dark);
        text-align: center;
        margin: 40px 0 20px;
    }

    .alert-success, .alert-danger {
        max-width: 900px;
        margin: 0 auto 20px;
        padding: 12px 20px;
        border-radius: 8px;
        font-size: 1rem;
        text-align: center;
    }

    table {
        background-color: var(--cream);
        border: 1px solid var(--wood-medium);
        width: 90%;
        margin: auto;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    thead {
        background-color: var(--wood-medium);
        color: white;
    }

    th, td {
        padding: 12px;
        text-align: center;
        vertical-align: middle;
    }

    tbody tr:nth-child(even) {
        background-color: var(--beige);
    }

    .btn-success {
        background-color: var(--wood-dark);
        border-color: var(--wood-dark);
        padding: 6px 12px;
        font-size: 0.9rem;
        border-radius: 6px;
    }

        .btn-success:hover {
            background-color: var(--wood-medium);
            border-color: var(--wood-medium);
        }
</style>

<h2>Pending Orders</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User Email</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Total Amount</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserEmail</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.Status</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>
                    <form asp-action="MarkAsDelivered" asp-route-id="@order.Id" method="post"
                          onsubmit="return confirm('Are you sure you want to mark this order as delivered?');">
                        <button type="submit" class="btn btn-success btn-sm">Mark as Delivered</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
