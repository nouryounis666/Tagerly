@model List<AdminOrderViewModel>

@{
    ViewBag.Title = "Pending Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --wood-dark: #5E3023;
        --wood-medium: #895737;
        --wood-light: #B88B4A;
        --cream: #E3DCCB;
        --beige: #D8C4A7;
        --light-bg: #F5F1EB;
    }

    body {
        background-color: var(--light-bg);
    }

    h2 {
        color: var(--wood-dark);
    }

    table {
        background-color: var(--cream);
        border: 1px solid var(--wood-medium);
    }

    thead {
        background-color: var(--wood-medium);
        color: white;
    }

    th, td {
        padding: 10px;
        text-align: center;
    }

    tbody tr:nth-child(even) {
        background-color: var(--beige);
    }

    .btn-success {
        background-color: var(--wood-dark);
        border-color: var(--wood-dark);
    }

    .btn-success:hover {
        background-color: var(--wood-medium);
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>

<h2 class="mb-4">Pending Orders</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User Email</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Total Amount</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserEmail</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.Status</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>
                    <form asp-action="MarkAsDelivered" asp-route-id="@order.Id" method="post" onsubmit="return confirm('Are you sure you want to mark this order as delivered?');">
                        <button type="submit" class="btn btn-success btn-sm">Mark as Delivered</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

