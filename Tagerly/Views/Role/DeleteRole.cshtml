@model Tagerly.ViewModels.RoleViewModel

@{
	ViewBag.Title = "Delete Role";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
	:root {
		--wood-dark: #5E3023;
		--wood-medium: #895737;
		--wood-light: #B88B4A;
		--cream: #E3DCCB;
		--beige: #D8C4A7;
		--light-bg: #F5F1EB;
	}

	body {
		background-color: var(--light-bg);
	}

	.form-container {
		background-color: var(--cream);
		border: 1px solid var(--wood-medium);
		padding: 20px;
		border-radius: 10px;
		max-width: 500px;
		margin: auto;
		margin-top: 40px;
	}

	h2 {
		color: var(--wood-dark);
		text-align: center;
	}
</style>

<div class="form-container">
	<h2>Delete Role</h2>

	<form asp-action="DeleteRole" method="post">
		<div class="form-group">
			<label for="selectedRole">Select Role to Delete</label>
			<select asp-items="ViewBag.Roles" class="form-control" name="selectedRole">
				<option value="">-- Select Role --</option>
			</select>
		</div>
		<button type="submit" class="btn btn-danger mt-2">Delete Role</button>
	</form>

	@if (ViewBag.Message != null)
	{
		<div class="alert alert-success mt-3">@ViewBag.Message</div>
	}
</div>
