@{
	ViewData["Title"] = "Forgot Password Confirmation";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-box">
	<h1>Forgot Password Confirmation</h1>
	<p>A password reset link has been sent to your email. Please check your inbox.</p>
	<p>You can now <a asp-action="Login" asp-controller="Account" class="action-link">log in</a>.</p>
</div>

<style>
	/* تنسيقات خاصة بالصفحة */
	.container-box h1 {
		color: #6B705C; /* أخضر زيتوني */
		margin-bottom: 20px;
		font-size: 28px;
	}

	.container-box p {
		font-size: 16px;
		color: #8B6F47; /* بني فاتح */
		margin-bottom: 15px;
	}
</style>