@{
	ViewData["Title"] = "Reset Password Confirmation";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	.reset-confirmation-container {
		max-width: 500px;
		margin: 50px auto;
		padding: 30px;
		border: 1px solid #ddd;
		border-radius: 10px;
		background-color: #e8f5e9;
		text-align: center;
	}

		.reset-confirmation-container h1 {
			color: #2e7d32;
			margin-bottom: 20px;
		}

		.reset-confirmation-container p {
			font-size: 16px;
			color: #555;
		}

		.reset-confirmation-container a {
			color: #1976d2;
			text-decoration: none;
		}

			.reset-confirmation-container a:hover {
				text-decoration: underline;
			}
</style>

<div class="reset-confirmation-container">
	<h1>Reset Password Confirmation</h1>
	<p>Your password has been reset successfully. You can now <a asp-action="Login">log in</a>.</p>
</div>