@{
	ViewData["Title"] = "Access Denied";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-box">
	<h1>Access Denied</h1>
	<p>Sorry, you do not have permission to access this page.</p>
	<p>Please contact the administrator or <a asp-action="Login" asp-controller="Account" class="action-link">log in</a> with the appropriate account.</p>
</div>

<style>

	.container-box h1 {
		color: #6B705C;
		margin-bottom: 20px;
		font-size: 28px;
	}

	.container-box p {
		font-size: 16px;
		color: #8B6F47;
		margin-bottom: 15px;
	}
</style>

