@model Tagerly.Models.ResendConfirmationEmailViewModel

@{
	ViewData["Title"] = "Resend Confirmation Email";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	.resend-email-container {
		max-width: 400px;
		margin: 50px auto;
		padding: 20px;
		border: 1px solid #ccc;
		border-radius: 10px;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		background-color: #f9f9f9;
	}

		.resend-email-container h1 {
			color: #333;
			text-align: center;
			margin-bottom: 20px;
		}

	.form-group {
		margin-bottom: 15px;
	}

		.form-group label {
			font-weight: bold;
		}

	.form-control {
		border-radius: 5px;
	}

	.btn-primary {
		width: 100%;
		padding: 10px;
		font-size: 16px;
		background-color: #1976d2;
		border: none;
		border-radius: 5px;
	}

		.btn-primary:hover {
			background-color: #1565c0;
		}

	.text-danger {
		font-size: 14px;
	}
</style>

<div class="resend-email-container">
	<h1>Resend Confirmation Email</h1>

	@if (!ViewData.ModelState.IsValid)
	{
		<div class="alert alert-danger">
			<ul>
				@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
				{
					<li>@error.ErrorMessage</li>
				}
			</ul>
		</div>
	}

	<form asp-action="ResendConfirmationEmail" method="post">
		<div class="form-group">
			<label asp-for="Email">Email</label>
			<input asp-for="Email" class="form-control" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Send</button>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}