@model ProductViewModel
@{
    ViewData["Title"] = "Delete Product";
}

<style>
    body {
        background-color: #F5F1EB;
        font-family: Arial, sans-serif;
    }

    :root {
        --wood: #8b5e3c;
        --wood-dark: #5c3d24;
        --cream: #fffdf5;
    }

    .page-center {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .form-container {
        background-color: var(--cream);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 600px;
    }

    h1 {
        color: var(--wood-dark);
        text-align: center;
        margin-bottom: 1.5rem;
    }

    /* Button Styles */
    .form-actions {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-top: 1.5rem;
    }

    .btn {
        padding: 6px 16px;
        font-size: 14px;
        min-width: 100px; /* Fixed width instead of full width */
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>

<div class="page-center">
    <div class="form-container">
        <h1>Delete Product</h1>
        <h4 class="text-danger">Are you sure you want to delete this?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Name:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4">Price:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-4">Category:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>
        </dl>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mt-3">
                <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-height: 200px;" />
            </div>
        }

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-actions">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/js/theme.bundle.js"></script>